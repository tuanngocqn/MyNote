<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".view.MainAnimation">

    <TextView
        android:id="@+id/textview_animation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_animation"
        android:layout_marginTop="10dp"
        android:text="Note to learn english"
        android:textAlignment="center"
        android:textColor="#FCFDFD"
        android:textSize="30dp"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/image_animation"
        android:layout_width="203dp"
        android:layout_height="206dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_english" />

</RelativeLayout>