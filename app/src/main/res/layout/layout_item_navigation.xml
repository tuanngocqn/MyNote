<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/selectag"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagenavigation_image"
        android:layout_width="24dp"
        android:layout_height="25dp"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp" />
    <TextView android:layout_marginLeft="20dp"
        android:padding="7dp"
    android:id="@+id/textviewnavigation_name"
    android:layout_toRightOf="@id/imagenavigation_image"
    android:layout_centerInParent="true"
    android:text= "Name of tag"
    android:textSize="20sp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
</RelativeLayout>